<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#012c57"
    tools:context="develop.timurgrdv.ru.test.Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Welcome back"
        android:textSize="28sp"
        android:textColor="@color/color_textWhite"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Enter your PIN to log in"
        android:textColor="@color/color_textWhite"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/etPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:maxLength="4"
        android:text=""/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/gridlayout_margin"
        android:columnCount="3"
        android:orientation="horizontal">


        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:id="@+id/btn1"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_margin="@dimen/button_layout_margin"
            android:text="1"
            android:textColor="@color/color_textBtn"
            android:textSize="@dimen/text_size"
            app:cub_border_color="@color/color_cub_border_color"
            app:cub_border_radius="@dimen/cub_border_radius"
            app:cub_color="@color/cub_color"
            app:cub_hover_color="@color/cub_hover_color"
            />

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:id="@+id/btn2"
            android:layout_width="@dimen/button_size"
